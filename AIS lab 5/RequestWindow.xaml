<Window x:Class="AIS_lab_5.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS_lab_5"
        mc:Ignorable="d"
        Title="RequestWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="RequestInfoTextBox" IsReadOnly="True"/>
        <Button Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="15,10" Margin="20" Click="Button_Click_Groups">Показать группы</Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="15,10" Margin="20" Click="Button_Click_Contacts" IsEnabled="{Binding IsEnabledButton}">Контакты групп</Button>
    </Grid>
    
    
</Window>
